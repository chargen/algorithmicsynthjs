.overlay
  background: alpha(colors.overlay, 0.2)
  position: absolute
  left: 0
  right: 0
  top: 0
  bottom: 0
  z-index: 10
  display:none

.editor
  background: colors.secondary
  position: absolute
  left: 20px
  right: 20px
  top: 30px
  bottom: 30px
  max-width: 1280px
  margin: 0 auto
  box-shadow: 0px 2px 50px alpha(colors.overlay, 0.7)

  rightColumnWidth = 300px
  buttonHeight = 60px
  buttonMargin = 10px
  buttonsHeight = buttonHeight + buttonMargin * 2

  .ace
    position: absolute
    left: 0
    right: rightColumnWidth
    bottom : 0
    top: 0
    background: red

  .insertables
    position: absolute
    right: 0
    width: rightColumnWidth
    bottom: buttonsHeight
    top: 0
    background: green

  .buttons
    position: absolute
    right: 0
    width: rightColumnWidth
    bottom: 0
    height: buttonsHeight